# App
APP_NAME=YorkU VSB Seat Monitor
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO
ADMIN_API_KEY=

# Polling
POLL_INTERVAL_SECONDS=300
POLL_JITTER_SECONDS=30
REQUEST_TIMEOUT_SECONDS=20
REQUEST_MAX_RETRIES=3
REQUEST_RETRY_BACKOFF_SECONDS=2
ALERT_COOLDOWN_MINUTES=30

# VSB source (required)
VSB_XHR_URL=https://w2prod.sis.yorku.ca/Apps/WebObjects/cdm.woa/wa/get_data.jsp
VSB_COOKIE_HEADER=
VSB_USER_AGENT=Mozilla/5.0 (Macintosh; Intel Mac OS X) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/126.0 Safari/537.36

# Session handling
SESSION_STALE_MINUTES=85
SESSION_HARD_EXPIRE_MINUTES=90

# Email alerts (required for alerts)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=465
EMAIL_SENDER=
EMAIL_APP_PASSWORD=
ALERT_RECIPIENT_DEFAULT=

# Storage
APP_DB_PATH=./data/seat_monitor.db
